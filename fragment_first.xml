<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE androidx.constraintlayout.widget.ConstraintLayout [
    <!ELEMENT androidx.constraintlayout.widget.ConstraintLayout (TextView*, Button*)>
    <!ATTLIST androidx.constraintlayout.widget.ConstraintLayout xmlns:android CDATA #FIXED "http://schemas.android.com/apk/res/android">
    <!ATTLIST androidx.constraintlayout.widget.ConstraintLayout xmlns:app CDATA #FIXED "http://schemas.android.com/apk/res-auto">
    <!ATTLIST androidx.constraintlayout.widget.ConstraintLayout xmlns:tools CDATA #FIXED "http://schemas.android.com/tools">
    <!ATTLIST androidx.constraintlayout.widget.ConstraintLayout android:layout_width CDATA #REQUIRED>
    <!ATTLIST androidx.constraintlayout.widget.ConstraintLayout android:layout_height CDATA #REQUIRED>
    <!ATTLIST androidx.constraintlayout.widget.ConstraintLayout tools:context CDATA #REQUIRED>
    <!ELEMENT TextView (#PCDATA)>
    <!ATTLIST TextView android:id CDATA #REQUIRED>
    <!ATTLIST TextView  android:layout_width CDATA #REQUIRED>
    <!ATTLIST TextView  android:layout_height CDATA #REQUIRED>
    <!ATTLIST TextView  android:text CDATA #REQUIRED>
    <!ATTLIST TextView  app:layout_constraintBottom_toTopOf CDATA #REQUIRED>
    <!ATTLIST TextView  app:layout_constraintEnd_toEndOf CDATA #REQUIRED>
    <!ATTLIST TextView  app:layout_constraintStart_toStartOf CDATA #REQUIRED>
    <!ATTLIST TextView  app:layout_constraintTop_toTopOf CDATA #REQUIRED>
    <!ELEMENT Button (#PCDATA)>
    <!ATTLIST Button android:id CDATA #REQUIRED>
    <!ATTLIST Button android:layout_width CDATA #REQUIRED>
    <!ATTLIST Button android:layout_height CDATA #REQUIRED>
    <!ATTLIST Button android:text CDATA #REQUIRED>
    <!ATTLIST Button app:layout_constraintBottom_toBottomOf CDATA #REQUIRED>
    <!ATTLIST Button app:layout_constraintEnd_toEndOf CDATA #REQUIRED>
